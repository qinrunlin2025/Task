    <script>
        // å®šä¹‰æ¯ä¸ªæ¨¡å—å¯¹åº”çš„å¤§å›¾è·¯å¾„ï¼ˆæ›¿æ¢ä¸ºä½ çš„å¤§å›¾è·¯å¾„ï¼‰
        const imageMap = {
            'eating': 'ä½ çš„ç¾é£Ÿå¤§å›¾è·¯å¾„.jpg',
            'drinking': 'ä½ çš„ç¾é…’å¤§å›¾è·¯å¾„.jpg',
            'tea': 'ä½ çš„èŒ¶ç±»å¤§å›¾è·¯å¾„.jpg',
            'photography': 'ä½ çš„æ‘„å½±å¤§å›¾è·¯å¾„.jpg',
            'running': 'ä½ çš„è·‘æ­¥å¤§å›¾è·¯å¾„.jpg',
            'reading': 'ä½ çš„ä¹¦ç±å¤§å›¾è·¯å¾„.jpg'
        };

        // æ‰“å¼€å¼¹çª—
        function openModal(type) {
            const modal = document.getElementById('imageModal');
            const modalImg = document.getElementById('modalImg');
            modalImg.src = imageMap[type];
            modal.style.display = 'flex';
        }

        // å…³é—­å¼¹çª—
        function closeModal() {
            document.getElementById('imageModal').style.display = 'none';
        }

        // ç‚¹å‡»å¼¹çª—èƒŒæ™¯ä¹Ÿå…³é—­
        window.onclick = function(event) {
            const modal = document.getElementById('imageModal');
            if (event.target === modal) {
                closeModal();
            }
        }
    </script>
